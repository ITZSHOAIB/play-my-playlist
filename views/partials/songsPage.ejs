<div
  class="container-fluid d-none flex-row justify-content-center align-items-start flex-wrap"
  id="songs-page"
>
  <div class="card rounded shadow-lg border-0 settings-card">
    <div class="form-row">
      <label for="copy-link">Invite Your Friend by this link (just tap)</label>
      <input
        type="text"
        id="copy-link"
        class="form-control form-control-lg"
        value="Your Room Invite Link"
        readonly="readonly"
      />
    </div>
    <h2 class="card-title">Enter your Songs' Links properly</h2>
    <div id="song-link-section">
      <div class="form-row">
        <input
          type="text"
          class="form-control form-control-lg song-link"
          placeholder="Enter your Song's link"
        />
      </div>
      <div class="form-row">
        <input
          type="text"
          class="form-control form-control-lg song-link"
          placeholder="Enter your Song's link"
        />
      </div>
      <div class="form-row">
        <input
          type="text"
          class="form-control form-control-lg song-link"
          placeholder="Enter your Song's link"
        />
      </div>
    </div>

    <div class="text-right">
      <button
        class="btn btn-success btn-lg"
        type="button"
        id="update-song-list"
      >
        Update Song List
      </button>
      <button
        class="btn btn-primary btn-lg"
        type="button"
        disabled
        id="start-game"
      >
        Let's start!
      </button>
    </div>
  </div>

  <div class="mw-full d-flex flex-column align-items-center">
    <h4 class="text-decoration-underline text-center mb-0">
      Players in the room!
    </h4>
    <div
      class="card rounded border overflow-auto settings-card"
      id="settings-players"
    ></div>

    <h4 class="text-decoration-underline text-center mb-0">
      All Provided Songs
    </h4>
    <div
      class="card rounded border overflow-auto settings-card font-size-12"
      id="entered-song-list"
    ></div>
  </div>
</div>
