<div
  class="container-fluid flex-column justify-content-center align-items-center w-full d-none"
  id="settings"
>
  <div class="card rounded shadow-lg border-0 settings-card">
    <h2 class="card-title">Set up your game accordingly!!</h2>

    <div class="form-row row-eq-spacing-sm">
      <div class="col-sm">
        <label for="no-of-songs"
          >No of Songs in everyone's playlist (3-10)</label
        >
        <input
          type="number"
          class="form-control form-control-lg"
          id="no-of-songs"
          value="3"
        />
      </div>
    </div>
    <div class="form-row">
      <label for="copy-link">Invite Your Friend by this link (just tap)</label>
      <input
        type="text"
        id="copy-link"
        class="form-control form-control-lg"
        value="Your Room Invite Link"
        readonly="readonly"
      />
    </div>

    <div class="text-right">
      <button class="btn btn-primary btn-lg" type="button" id="move-songs-page">
        Move to Songs
      </button>
    </div>
  </div>
  <h4 class="text-decoration-underline mb-0">Players in the room!</h4>
  <div
    class="card rounded border overflow-y-auto settings-card"
    id="settings-players"
  ></div>
</div>
