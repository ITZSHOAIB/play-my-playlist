<div class="container-fluid d-flex flex-column justify-content-center align-items-center h-full" id="landing">
    <div class="card rounded shadow-lg border-0 landing-card">
        <h2 class="card-title">
            <% if(!roomID) { %>
                Wanna Create the Room?
            <% } else { %>
                Wanna Join the Room?
            <% } %>                         
        </h2>
        <div class="form-group">
            <input type="text" class="form-control form-control-lg" id="name-landing-input" placeholder="Your Name Here">
        </div>
        <div class="text-right">
            <% if(!roomID) { %>
                <button class="btn btn-primary btn-lg" type="button" id="create-room">Create Room</button>
            <% } else { %>
                <button class="btn btn-secondary btn-lg" type="button" id="join-room">Join Room</button>
            <% } %>            
        </div>
    </div>
</div>